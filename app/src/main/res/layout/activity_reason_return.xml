<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reason_return">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Please select reason"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"
            android:background="#413C69" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RadioGroup
            android:id="@+id/select_reason"
            android:layout_width="match_parent"
            android:layout_height="440dp" >

            <RadioButton
                android:id="@+id/reason_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="Want to change payment method"
                android:textSize="20dp"
                android:gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RadioButton
                android:id="@+id/reason_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="Change/combine order"
                android:textSize="20dp"
                android:gravity="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RadioButton
                android:id="@+id/reason_3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="Delivery time is too long"
                android:textSize="20dp"
                android:gravity="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RadioButton
                android:id="@+id/reason_4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="Duplicate order"
                android:textSize="20dp"
                android:gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RadioButton
                android:id="@+id/reason_5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="Sourcing payment issue"
                android:textSize="20dp"
                android:gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RadioButton
                android:id="@+id/reason_6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="Change of mind"
                android:textSize="20dp"
                android:gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RadioButton
                android:id="@+id/reason_7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="Decided for alternative product"
                android:textSize="20dp"
                android:gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RadioButton
                android:id="@+id/reason_8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="Fees-shipping costs"
                android:textSize="20dp"
                android:gravity="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


        </RadioGroup>

    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button3"
            android:layout_width="415dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:text="Confirm" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>